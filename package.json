{
  "name": "polaris",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:docker": "docker-compose up --build",
    "stop:docker": "docker-compose down",
    "start:auth": "ts-node services/auth/auth-service.ts",
    "start:profile": "ts-node services/profile/profile-service.ts",
    "start:journal": "ts-node services/journal/journal-service.ts",
    "dev:auth": "nodemon --exec \"node --loader ts-node/esm --experimental-specifier-resolution=node --no-warnings\" services/auth/auth-service.ts",
    "dev:profile": "nodemon --exec \"node --loader ts-node/esm --experimental-specifier-resolution=node --no-warnings\" services/profile/profile-service.ts",
    "dev:journal": "nodemon --exec \"node --loader ts-node/esm --experimental-specifier-resolution=node --no-warnings\" services/journal/journal-service.ts",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md,css,html}\""
  },
  "dependencies": {
    "argon2": "^0.44.0",
    "axios": "^1.6.8",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "pg": "^8.16.3",
    "redis": "^5.5.6"
  },
  "devDependencies": {
    "@types/argon2": "^0.14.1",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.21",
    "@types/node": "^20.4.2",
    "@types/pg": "^8.15.5",
    "@types/react": "^18.2.24",
    "@types/react-dom": "^18.2.10",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.4",
    "typescript": "^5.3.3"
  }
}
